<%# app/views/kaminari/bootstrap4/_paginator.html.erb %>

<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center">
    <li class="page-item <%= ('disabled' if current_page.first?) %>">
      <%= link_to 'First', url_for(page: 1), class: "page-link" %>
    </li>
    <li class="page-item <%= ('disabled' if current_page.first?) %>">
      <%= link_to 'Previous', url_for(page: current_page.prev_page), class: "page-link" %>
    </li>
    <% paginator.each_page do |page| %>
      <% if page.left_outer? || page.right_outer? || page.inside_window? %>
        <li class="page-item <%= ('active' if page == current_page) %>">
          <%= link_to page, url_for(page: page), class: "page-link" %>
        </li>
      <% elsif page.gap? %>
        <li class="page-item disabled"><a class="page-link">...</a></li>
      <% end %>
    <% end %>
    <li class="page-item <%= ('disabled' if current_page.last?) %>">
      <%= link_to 'Next', url_for(page: current_page.next_page), class: "page-link" %>
    </li>
    <li class="page-item <%= ('disabled' if current_page.last?) %>">
      <%= link_to 'Last', url_for(page: paginator.last_page), class: "page-link" %>
    </li>
  </ul>
</nav>
