<div class="container">
  <h1><%= t('views.tasks.index.title') %></h1>

  <%= form_with url: tasks_path, method: :get, scope: :search, local: true do %>
    <div class="form-row">
      <div class="form-group col-md-4">
        <%= label_tag :status, t('views.tasks.index.search.status') %>
        <%= select_tag 'search[status]', options_for_select(Task.statuses.keys.map { |w| [I18n.t("tasks.status.#{w}"), w] }, selected: params.dig(:search, :status)), include_blank: true, class: "form-control" %>
      </div>

      <div class="form-group col-md-4">
        <%= label_tag :title, t('views.tasks.index.search.title') %>
        <%= text_field_tag 'search[title]', params.dig(:search, :title), class: "form-control" %>
      </div>

      <div class="form-group col-md-4">
        <%= label_tag :label, t('views.tasks.index.search.label') %>
        <% labels = Label.where(user: current_user).pluck(:name, :id) %>
        <%= select_tag 'search[label]', options_for_select(labels, selected: params.dig(:search, :label)), include_blank: true, class: "form-control" %>
        <% puts "Available labels: #{labels.inspect}" %> <!-- デバッグ用 -->
      </div>
    </div>

    <div class="form-group">
      <%= submit_tag t('views.tasks.index.search.submit'), id: 'search_task', class: "btn btn-outline-success" %>
    </div>
  <% end %>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th><%= t('views.tasks.index.table_headers.title') %></th>
        <th><%= t('views.tasks.index.table_headers.content') %></th>
        <th><%= t('views.tasks.index.table_headers.created_at') %></th>
        <th><%= link_to t('views.tasks.index.table_headers.deadline_on'), {sort_deadline_on: true}, class: "sort-link" %></th>
        <th><%= link_to t('views.tasks.index.table_headers.priority'), {sort_priority: true}, class: "sort-link" %></th>
        <th><%= t('views.tasks.index.table_headers.status') %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr class="task_row">
          <td><%= task.title %></td>
          <td><%= task.content %></td>
          <td><%= task.created_at.strftime('%Y-%m-%d %H:%M:%S') %></td>
          <td><%= task.deadline_on %></td>
          <td><%= I18n.t("tasks.priority.#{task.priority}") %></td>
          <td><%= I18n.t("tasks.status.#{task.status}") %></td>
          <td><%= link_to t('views.tasks.index.actions.show'), task_path(task), class: 'btn btn-primary btn-sm' %></td>
          <td><%= link_to t('views.tasks.index.actions.edit'), edit_task_path(task), class: 'btn btn-secondary btn-sm' %></td>
          <td><%= link_to t('views.tasks.index.actions.destroy'), task_path(task), method: :delete, data: { confirm: t('views.tasks.index.actions.confirm_destroy') }, class: 'btn btn-danger btn-sm' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= paginate @tasks %>
</div>
