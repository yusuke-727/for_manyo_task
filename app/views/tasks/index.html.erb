<h1>Tasks Index Page</h1>

<table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Content</th>
     <th>Created_at</th>
    </tr>
  </thead>

<tbody>
<% @tasks.each do |task| %>
    <tr>
     <td><%= task.title %></td>
     <td><%= task.content %></td>
     <td><%= task.created_at %></td>
     <td><%= link_to 'Show', task_path(task), class: 'show-task' %></td>
     <td><%= link_to 'Edit', edit_task_path(task), class: 'edit-task' %></td>
     <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: 'destroy-task' %></td>
     </tr>
 <% end %>
</tbody>
</table>