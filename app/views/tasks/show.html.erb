<h1><%= t('views.tasks.show.title') %></h1>

<p>
 <strong><%= t('views.tasks.show.attributes.title') %>:</strong>
  <%= @task.title %>
</p>

<p>
 <strong><%= t('views.tasks.show.attributes.content') %></strong>
  <%= @task.content %>
</p>

<p>
 <strong><%= t('views.tasks.show.attributes.created_at') %>:</strong>
  <%= @task.created_at.strftime('%Y-%m-%d %H:%M:%S') %>
</p>

<%= link_to t('views.tasks.index.actions.edit'), edit_task_path(@task), id: 'edit-task' %> |
<%= link_to t('views.tasks.new.form.back'), tasks_path, id: 'back' %>
