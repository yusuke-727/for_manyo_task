<h1>ユーザ編集ページ</h1>

<%= form_with(model: @user, url: admin_user_path(@user), method: :patch, local: true, id: 'update-user') do |form| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "エラー") %>が発生しました:</h2>
      <ul>
         <% @user.errors.each do |attribute, message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name, "名前", id: "name-label" %><br>
    <%= form.text_field :name, id: "name" %>
  </div>

  <div class="field">
    <%= form.label :email, "メールアドレス", id: "email-label" %><br>
    <%= form.email_field :email, id: "email" %>
  </div>

  <div class="field">
    <%= form.label :password, "パスワード", id: "password-label" %> <br>
    <%= form.password_field :password, id: "password" %>
  </div>

  <div class="field">
    <%= form.label :password_confirmation, "パスワード（確認）", id: "password-confirmation-label" %><br>
    <%= form.password_field :password_confirmation, id: "password-confirmation" %>
  </div>

  <div class="field">
    <%= form.label :admin, "管理者権限", id: "admin-label" %><br>
    <%= form.check_box :admin, id: "admin" %>
  </div>

  <div class="actions">
    <%= form.submit "更新する", id: "update-user" %>
  </div>
<% end %>


<%= link_to "戻る", admin_users_path, id: "back" %>
