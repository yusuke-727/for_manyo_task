<h1><%= t('views.users.index.title') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.user.name') %></th>
      <th><%= t('activerecord.attributes.user.email') %></th>
      <th><%= t('activerecord.attributes.user.admin') %></th>
      <th><%= t('views.users.index.tasks_count') %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin? ? 'あり' : 'なし' %></td>
        <td><%= user.tasks.count %></td>
        <td>
          <%= link_to t('views.tasks.index.actions.show'), admin_user_path(user), class: 'show-user' %> |
          <%= link_to t('views.tasks.index.actions.edit'), edit_admin_user_path(user), class: 'edit-user' %> |
          <%= link_to t('views.tasks.index.actions.destroy'), admin_user_path(user), method: :delete, data: { confirm: t('views.tasks.index.actions.confirm_destroy') }, class: 'destroy-user' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
