<div class="container">
  <h1 id="page-title">ラベル編集ページ</h1>

  <%= form_with(model: @label, local: true, class: "mt-4") do |form| %>
    <% if @label.errors.any? %>
      <div id="error_explanation" class="alert alert-danger">
        <h2><%= pluralize(@label.errors.count, "エラー") %>が発生しました:</h2>
        <ul>
          <% @label.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :name, "名前" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit '更新する', class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to '戻る', labels_path, id: "back", class: "btn btn-secondary mt-3" %>
</div>
