<div class="container">
  <h1 class="page-title">ラベル一覧ページ</h1>

  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <table class="table table-striped table-bordered">
    <thead class="thead-light">
      <tr>
        <th>名前</th>
        <th>タスク数</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <% @labels.each do |label| %>
        <tr>
          <td><%= label.name %></td>
          <td><%= label.tasks.count %></td>
          <td>
            <%= link_to '編集', edit_label_path(label), class: 'btn btn-sm btn-secondary' %>
            <%= link_to '削除', label, method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
