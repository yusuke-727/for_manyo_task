<div class="container">
  <h1><%= t('views.users.new.title') %></h1>

  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.each do |attribute, message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, local: true, class: "w-50 mx-auto") do |form| %>
    <div class="form-group">
      <%= form.label :name, t('views.users.new.form.name') %>
      <%= form.text_field :name, id: 'name', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, t('views.users.new.form.email') %>
      <%= form.text_field :email, type: 'text', id: 'email', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, t('views.users.new.form.password') %>
      <%= form.password_field :password, id: 'password', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, t('views.users.new.form.password_confirmation') %>
      <%= form.password_field :password_confirmation, id: 'password_confirmation', class: "form-control" %>
    </div>

    <div class="actions">
      <%= form.submit t('views.users.new.form.create'), id: 'create-user', class: "btn btn-primary" %>
    </div>
  <% end %>
</div>

