<div class="container">
  <h1><%= t('views.users.show.title') %></h1>

  <% if flash[:notice] %>
    <div class="alert alert-success" role="alert">
      <%= flash[:notice] %>
    </div>
  <% end %>

  <% if flash[:alert] %>
    <div class="alert alert-danger" role="alert">
      <%= flash[:alert] %>
    </div>
  <% end %>

  <div class="card">
    <div class="card-body">
      <p><strong><%= t('views.users.show.name') %>:</strong> <%= @user.name %></p>
      <p><strong><%= t('views.users.show.email') %>:</strong> <%= @user.email %></p>
    </div>
  </div>

  <div class="mt-3">
    <%= link_to t('views.users.show.edit'), edit_user_path(@user), id: 'edit-user', class: 'btn btn-primary' %>
  </div>
</div>
