<div class="container">
  <h1><%= t('views.users.edit.title') %></h1>

  <% if @user.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
        <% @user.errors.each do |attribute, message| %>
          <li><%= message %></li>
        <% end %>     
      </ul>
    </div>
  <% end %>

  <%= form_with(model: @user, local: true, class: "w-50 mx-auto") do |form| %>
    <div class="form-group">
      <%= form.label :name, t('views.users.new.form.name') %><br>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :email, t('views.users.new.form.email') %><br>
      <%= form.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, t('views.users.new.form.password') %><br>
      <%= form.password_field :password, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password_confirmation, t('views.users.new.form.password_confirmation') %><br>
      <%= form.password_field :password_confirmation, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.submit t('views.users.edit.update'), class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= link_to t('views.users.edit.back'), user_path(@user), class: "btn btn-secondary" %>
</div>
