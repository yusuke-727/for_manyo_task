<div class="container">
  <h1><%= t('views.sessions.new.title') %></h1>

  <%= form_with(url: new_session_path, local: true, scope: :session, class: "w-50 mx-auto") do |form| %>
    <div class="form-group">
      <%= form.label :email, t('views.sessions.new.form.email') %>
      <%= form.text_field :email, id: 'session_email', type: 'text', class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :password, t('views.sessions.new.form.password') %>
      <%= form.password_field :password, id: 'session_password', class: "form-control" %>
    </div>

    <div class="form-group">
    <%= form.submit t('views.sessions.new.form.login'), id: 'create-session', class: "btn btn-primary sign-in" %>
    </div>
  <% end %>
</div>
